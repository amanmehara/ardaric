<!DOCTYPE html>
<html lang="{{@site.lang}}">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

  <title>{{meta_title}}</title>

  <meta name="HandheldFriendly" content="True" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />

  {{ghost_head}}
</head>

<body class="{{body_class}}">

  <div class="nav-header">
    <nav class="nav-wrapper">
      {{#if @site.logo}}
      <span class="logo">
        <a href="{{@site.url}}" title="{{t "Home"}}"><img src="{{@site.logo}}" alt="{{t "Logo"}}" /></a>
      </span>
      {{/if}}
      {{navigation}}
      <ul class="nav-side">
        {{#if @site.twitter}}
        <li>
          <a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">
          {{> "icons/twitter-square"}}
          </a>
        </li>
        {{/if}}
        {{#if @site.facebook}}
        <li>
          <a href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">
            {{> "icons/facebook-square"}}
            </a>
        </li>
        {{/if}}
        <li>
          <a href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" title="RSS" target="_blank" rel="noopener">
          {{> "icons/rss-square"}}
          </a>
        </li>
      </ul>
    </nav>

    <div class="nav-wrapper-control">
      <div class="inner">
        <a class="nav-menu"><i class="icon icon-menu"></i>{{t "Menu"}}</a>
      </div>
    </div>
  </div>
  <div class="nav-close"></div>

  <section class="page-wrapper">

    {{{body}}}

    <div class="nav-footer">
      <div class="inner">
        <nav class="nav-wrapper">
          {{#if @site.secondary_navigation}}
          {{navigation type="secondary"}}
          {{/if}}
          <span>{{@site.title}} &copy; {{date format='YYYY'}}</span>
          <span> {{t "Published with"}}
            <a href="https://ghost.org/">Ghost</a>
          </span>
          <span> {{t "Theme" }}
            <a href="https://github.com/amanmehara/ardaric">Ardaric</a>
          </span>
        </nav>
      </div>
    </div>

  </section>

  {{!-- Load basic scripts --}}
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
          integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
          crossorigin="anonymous">
  </script>
  <script type="text/javascript" src="{{asset "js/script.js"}}"></script>

  {{!-- Load scripts from other template files --}}
  {{{block "scripts"}}}

  {{ghost_foot}}

</body>

</html>